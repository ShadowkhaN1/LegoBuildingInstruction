

@model BuildingInstructionEditViewModel
@inject ICategoryRepository _categoryRepository
@*
*@
@{

    Layout = null;
}
@section Scripts {
    <!-- Bootstrap core JavaScript -->
    <script src="~/vendor/jquery/jquery.min.js"></script>
    <script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <script defer src="~/vendor/fontawesome/js/all.js"></script> <!--load all styles -->

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    <script defer src="/fontawesome/js/all.js"></script>
}



<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>@ViewBag.Title</title>

    <!-- Bootstrap core CSS -->
    <link href="~/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="~/css/shop-homepage.css" rel="stylesheet">

    <link href="~/vendor/fontawesome/css/all.css" rel="stylesheet">

</head>

<body>


    <partial name="_Navbar" />

    <div class="col-md-6 offset-md-3 mt-3 mb-5">
        <div class="card card-body bg-light">

            <h2 class="text-center">Add new instruction</h2>


            <form method="post" enctype="multipart/form-data" asp-action="CreateInstruction" asp-controller="BuildingInstruction">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="CategoryId" class="control-label font-weight-bold"></label>
                    <select asp-for="CategoryId" class="form-control" asp-items="(await _categoryRepository.AllCategoriesAsync()).Select(x => new SelectListItem() {Text = x.CategoryName, Value = x.CategoryId.ToString() })">
                        <option value="">Please choose category</option>
                    </select>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Name" class="control-label font-weight-bold"></label>
                    <input asp-for="Name" class="form-control" placeholder="The name of the instruction" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>


                <div class="form-group">
                    <label asp-for="LongDescription" class="control-label font-weight-bold"></label>
                    <textarea asp-for="LongDescription" class="form-control" placeholder="Enter a short description of what the project is about."></textarea>
                    <span asp-validation-for="LongDescription" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Set" class="control-label font-weight-bold"></label>
                    <input asp-for="Set" class="form-control" placeholder="Wedo 2.0-45300, Mindstorms Home-31313, Mindstorms expansion-45560" />
                    <span asp-validation-for="Set" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Pages" class="control-label font-weight-bold"></label>
                    <input asp-for="Pages" class="form-control" placeholder="Enter the total number of pages." />
                    <span asp-validation-for="Pages" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="InstructionImage" class="control-label font-weight-bold"></label>
                    <input asp-for="InstructionImage" class="form-control" type="file" id="formFile">
                    <span asp-validation-for="InstructionImage" class="text-danger"></span>
                </div>



                <div class="form-group">
                    <label asp-for="InstructionPdf" class="control-label font-weight-bold"></label>
                    <input asp-for="InstructionPdf" class="form-control" type="file" id="formFile">
                    <span asp-validation-for="InstructionPdf" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="InstructionVideo" class="control-label font-weight-bold"></label>
                    <input asp-for="InstructionVideo" class="form-control" type="file" id="formFile">
                    <span asp-validation-for="InstructionVideo" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Program" class="control-label font-weight-bold"></label>
                    <input asp-for="Program" class="form-control" type="file" id="formFile">
                    <span asp-validation-for="Program" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-12">
                            <input type="submit" value="Add Instruction" class="btn btn-primary" />
                            <a href='javascript:history.go(-1)' class="btn btn-dark">Cancel</a>
                        </div>
                    </div>

                </div>
            </form>
        </div>
    </div>

</body>
</html>
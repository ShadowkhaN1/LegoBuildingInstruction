
@model BuildingInstruction
@inject UserManager<ApplicationUser> UserManager
@inject SignInManager<ApplicationUser> SignInManager

@{
    var newComment = new Comment
    {
        BuildingInstructionId = Model.Id
    };

}

<div class="container-fluid p-3">



    <div class="row">


        <div class="col-lg-7">

            <div class="embed-responsive embed-responsive-16by9">
                <iframe class="embed-responsive-item" src="@Model.VideoUrl" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>

            </div>

        </div>


        <div class="col-lg-5">

            <h4 class="text-center">@Model.Name</h4>

            <hr style="margin-bottom: 0px" />
            <div class="row">
                <div class="col-sm">
                    <p class="text-secondary"> Pages: @Model.Pages </p>
                </div>
                <div class="col-sm">
                    <p class="text-secondary"> Set: @Model.Set </p>
                </div>


                <div class="col-sm">
                    <partial name="_Rating" model="@Model" />
                </div>

            </div>
            <hr style="margin-top: 0px" />

            <div class="row">
                <div class="col-sm-4">

                    <div class="dropdown">
                        <button class="btn btn-warning dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Rate
                        </button>
                        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                            <a class="dropdown-item" href="#">1</a>
                            <a class="dropdown-item" href="#">2</a>
                            <a class="dropdown-item" href="#">3</a>
                            <a class="dropdown-item" href="#">4</a>
                            <a class="dropdown-item" href="#">5</a>
                        </div>
                    </div>
                </div>
                <div class="col-sm-4 mt-2">
                    <p class="text-secondary">Your rating: 5</p>
                </div>


                <div class="col-sm-4 mt-2">
                    <a class="text-primary" href=""><i class="fas fa-heart fa-fw"></i>Favorites</a>
                </div>


            </div>


            <div class="row justify-content-between">
                <div class="col-6 mt-3">
                    <p class="text-secondary">Author: @Model.User.FirstName @Model.User.LastName</p>

                </div>

                @if (SignInManager.IsSignedIn(User))
                {
                    @if (UserManager.GetUserId(User) == Model.UserId)
                    {
                        <div class="col-3 mt-3">
                            <a asp-controller="BuildingInstruction" asp-action="DeleteInstruction" asp-route-id="@Model.Id" class="text-secondary" onclick="return confirm('Are you sure you want to delete?')"><i class="fas fa-trash fa-fw"></i>Delete</a>
                        </div>

                        <div class="col-3 mt-3">
                            <a asp-controller="BuildingInstruction" asp-action="DeleteInstruction" asp-route-id="@Model.Id" class="text-secondary"><i class="fas fa-edit fa-fw"></i>Edit</a>
                        </div>

                    }

                }


            </div>


            <hr style="margin-top: 0px" />

            <p class="text-secondary">@Model.LongDescription</p>


            <a type="button" class="btn btn-secondary btn-block" asp-controller="BuildingInstruction" asp-action="InstructionPDF" asp-route-id="@Model.Id">Get Building Instruction</a>
            <a type="button" class="btn btn-secondary btn-block" href="~/programs/colorsegregation-program.ev3" download="qwe">Get Program</a>
        </div>

    </div>

</div>


<section class="content-item" id="comments">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">

                <partial name="_Comment" model="newComment" />
                @await Component.InvokeAsync("CommentList", new { buildingInstructionId = Model.Id })

            </div>
        </div>
    </div>
</section>



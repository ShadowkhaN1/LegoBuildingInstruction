@model BuildingInstruction


<div class="col-lg-4 col-md-6 mb-4">
    <div class="card h-100">
        <a href="#"><img class="card-img-top" src="@Url.Content(Model.ImageThumbnailUrl)" alt=""></a>
        <div class="card-body">
            <h4 class="card-title">
                <a href="#">@Model.Name</a>
            </h4>
            <h6>Pages: @Model.Pages</h6>
            <h6>Dificculty: @Model.DifficultyLevel.Name</h6>
            <p class="card-text">@Model.ShortDescription</p>
        </div>
        <div class="card-footer">
            <small class="text-muted">&#9733; &#9733; &#9733; &#9733; &#9734;</small>
        </div>
    </div>
</div>



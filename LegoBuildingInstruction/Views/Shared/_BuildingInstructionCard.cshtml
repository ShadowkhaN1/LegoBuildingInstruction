@model BuildingInstruction


<div class="col-lg-4 col-md-6 mb-4">

    <div class="card h-100 shadow p-3 mb-3" style="border-radius: 25px; border: 5px solid white">
        <img class="card-img-top" src="@Url.Content(Model.ImageThumbnailUrl)" alt="">
        <div class="card-body">
            <h4 class="card-title text-center">
                <strong>@Model.Name</strong>
            </h4>

            <p class="card-text mb-0 "><strong>Category:</strong> @Model.Category.CategoryName</p>
            <p class="card-text"><strong>Pages:</strong> @Model.Pages</p>

            <a type="button" class="btn btn-danger  btn-block " asp-controller="BuildingInstruction" asp-action="Details" asp-route-id="@Model.Id">View details »</a>



        </div>
        <div class="card-footer">


            <partial name="_Rating" model="@Model" />



        </div>
    </div>

</div>



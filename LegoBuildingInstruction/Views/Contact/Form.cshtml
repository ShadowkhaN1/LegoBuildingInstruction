


@{

    Layout = null;
    ViewBag.Title = "Contact Form";
}
@section Scripts {
    <!-- Bootstrap core JavaScript -->
    <script src="~/vendor/jquery/jquery.min.js"></script>
    <script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <script defer src="~/vendor/fontawesome/js/all.js"></script> <!--load all styles -->
}

@model ContactViewModel


<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>@ViewBag.Title</title>

    <!-- Bootstrap core CSS -->
    <link href="~/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="~/css/shop-homepage.css" rel="stylesheet">

    <link href="~/vendor/fontawesome/css/all.css" rel="stylesheet">

</head>

<body>


    <partial name="_Navbar" />


    <div class="col-md-6 offset-md-3 mt-3">
        <div class="card card-body bg-light">

            <h2 class="text-center">@ViewBag.Title</h2>
            <form method="post">

                <div asp-validation-summary="ModelOnly" class="text-danger"> </div>

                <div class="form-group">
                    <label asp-for="Name" class="font-weight-bold">Name:</label>
                    <input asp-for="Name" class="form-control" placeholder="Your Name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Email" class="font-weight-bold">Email:</label>
                    <input type="email" asp-for="Email" class="form-control" placeholder="Your address Email"/>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Subject" class="font-weight-bold">Subject:</label>
                    <input type="text" asp-for="Subject" class="form-control" placeholder="The reason"/>
                    <span asp-validation-for="Subject" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Message" class="font-weight-bold">Message:</label>
                    <textarea rows="4" asp-for="Message" class="form-control" placeholder="Explain your issue please."></textarea>
                    <span asp-validation-for="Message" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary"><i class='fas fa-envelope'></i> Send Message</button>
                    <div class="text-success mt-2">@ViewBag.UserMessage</div>
                </div>
            </form>
        </div>
    </div>




</body>

</html>